<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane alignment="CENTER" hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx/17"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="brennan.transportauditlogin.LoginController"
          style="-fx-background-image: url('/taxi.jpg'); -fx-background-size: cover; -fx-background-position: center center;">

    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>

    <Text text="TransportAudit Login"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"
          style="-fx-fill: white; -fx-effect: dropshadow(three-pass-box, black, 10, 0, 0, 0); -fx-font-weight: bold;">
        <font>
            <Font name="Tahoma" size="20.0" />
        </font>
    </Text>

    <Label text="Email:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"
           style="-fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, black, 5, 0, 0, 0); -fx-font-weight: bold;" />

    <TextField fx:id="emailField" promptText="user@example.com"
               GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"
           style="-fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, black, 5, 0, 0, 0); -fx-font-weight: bold;" />

    <PasswordField fx:id="passwordField"
                   GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <Hyperlink text="Forgot Password?" onAction="#onForgotPasswordClick"
                   style="-fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, black, 5, 0, 0, 0);"/>
    </HBox>

    <HBox alignment="BOTTOM_RIGHT" spacing="10"
          GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button fx:id="registerButton" onAction="#onRegisterButtonClick" text="Register" />
        <Button fx:id="loginButton" onAction="#onLoginButtonClick" text="Login" />
    </HBox>
</GridPane>